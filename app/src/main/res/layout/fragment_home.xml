<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="1000dp"
    android:background="@color/blue_dark"
    tools:context=".ui.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mainCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/grey"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clMainCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/big_margin">


                <ImageView
                    android:id="@+id/ivLocationIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_margin"
                    android:src="@drawable/ic_location"
                    app:layout_constraintStart_toStartOf="@id/clMainCard"
                    app:layout_constraintTop_toTopOf="@id/clMainCard"
                    app:tint="@color/white" />


                <TextView
                    android:id="@+id/tvCurrentLocation"
                    style="@style/defaultTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delhi"
                    app:layout_constraintBottom_toBottomOf="@+id/ivLocationIcon"
                    app:layout_constraintStart_toEndOf="@id/ivLocationIcon"
                    app:layout_constraintTop_toTopOf="@id/ivLocationIcon" />

                <TextView
                    android:id="@+id/tvTemperature"
                    style="@style/defaultTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:text="25"
                    android:textSize="@dimen/large_font_size"
                    app:layout_constraintStart_toStartOf="@+id/ivLocationIcon"
                    app:layout_constraintTop_toBottomOf="@+id/ivLocationIcon" />

                <TextView
                    android:id="@+id/tvTemperatureScale"
                    style="@style/defaultTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    app:layout_constraintStart_toEndOf="@+id/tvTemperature"
                    app:layout_constraintTop_toTopOf="@id/tvTemperature" />


                <TextView
                    android:id="@+id/tvDateAndDay"
                    style="@style/defaultTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/normal_margin"
                    android:text="Feb 9 Web"
                    android:textSize="@dimen/small_font_size"
                    app:layout_constraintStart_toStartOf="@+id/ivLocationIcon"
                    app:layout_constraintTop_toBottomOf="@+id/tvTemperature" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/lottieWeatherInfo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:layout_constraintBottom_toTopOf="@id/tvWeatherInfo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/ivLocationIcon"
                    app:lottie_autoPlay="true"
                    app:lottie_fileName="weather_animation.json"
                    app:lottie_loop="true" />

                <TextView
                    android:id="@+id/tvWeatherInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato"
                    android:text="Mostly Clear"
                    android:textColor="@color/white"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tvDateAndDay"
                    app:layout_constraintEnd_toEndOf="@id/lottieWeatherInfo"
                    app:layout_constraintStart_toStartOf="@id/lottieWeatherInfo" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvWeatherDetails"
            style="@style/defaultTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_margin"
            android:text="Weather Details"
            android:textSize="@dimen/font_heading"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="@id/mainCard"
            app:layout_constraintTop_toBottomOf="@id/mainCard" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineCenterVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />

        <include
            android:id="@+id/cardTemperatureNow"
            layout="@layout/custom_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            app:layout_constraintEnd_toStartOf="@id/guidelineCenterVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvWeatherDetails" />

        <include
            android:id="@+id/cardHumidity"
            layout="@layout/custom_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelineCenterVertical"
            app:layout_constraintTop_toBottomOf="@id/tvWeatherDetails" />

        <include
            android:id="@+id/cardWind"
            layout="@layout/custom_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            app:layout_constraintEnd_toStartOf="@id/guidelineCenterVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardTemperatureNow" />

        <include
            android:id="@+id/cardUltraVioletRays"
            layout="@layout/custom_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelineCenterVertical"
            app:layout_constraintTop_toBottomOf="@id/cardHumidity" />


        <include
            android:id="@+id/cardVisibility"
            layout="@layout/custom_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            app:layout_constraintEnd_toStartOf="@id/guidelineCenterVertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardWind" />

        <include
            android:id="@+id/cardAirPressure"
            layout="@layout/custom_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guidelineCenterVertical"
            app:layout_constraintTop_toBottomOf="@id/cardUltraVioletRays">

        </include>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>